@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<head>
    <link rel="stylesheet" href="~/css/loginRegister.css"/>
</head>

<div class="d-flex align-items-center justify-content-center" style="min-height: 80vh;">
    <div class="row w-100" style="max-width: 800px; transform: translateY(-10%);">
        <!-- Venstre kolonne med bilde -->
        <div class="col-md-5 d-flex align-items-center" style="justify-content: flex-start; padding-right: 20px;">
            <img src="/images/Niss.png" alt="Login Illustration" class="img-fluid" style="max-height: 400px;">
        </div>

        <!-- Vertikal strek -->
        <div class="col-md-1 d-flex align-items-center justify-content-center">
            <div style="border-left: 2px solid #ccc; height: 120%;"></div>
        </div>

        <!-- Høyre kolonne med login-skjema -->
        <div class="col-md-6 p-4">
            <h2 class="text-center mb-4">Log in</h2>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" type="password" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label asp-for="Input.RememberMe" class="form-check-label" style="font-weight: 500; color: #464b50">
                        Remember me
                    </label>
                </div>

                <button id="login-submit" type="submit" class="btn btn-primary w-100 mb-3">Log in</button>

                <div class="text-center">
                    <p>
                        <a asp-area="Identity" asp-page="/Account/Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-secondary w-100 mb-3">Register</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>
