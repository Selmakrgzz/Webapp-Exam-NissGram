@model NissGram.Models.Post

<head>
    <link rel="stylesheet" href="~/css/createPost.css" />
</head>

<div class="container mt-3">
    <div class="text-center mb-4">
        <h2>Share something!</h2>
    </div>

    <div class="row">
        <!-- Left Column: Image Preview -->
        <div class="col-md-6 d-flex justify-content-center">
            <div id="imagePreview" class="border">
                <span class="text-muted">Image preview will appear here</span>
            </div>
        </div>

        <!-- Right Column: Form Elements -->
        <div class="col-md-6">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <!-- Text Area and Button aligned to the right -->
                <div class="form-group md-1">
                    <textarea class="form-control form-control-lg" id="textArea" rows="6" placeholder="Write something..." asp-for="Text"></textarea>
                    <span asp-validation-for="Text" class="text-danger"></span>

                    <!-- Image Upload Section -->
                    <div class="form-group md-2">
                        <!-- Hidden file input -->
                        <input type="file" id="uploadImage" class="file-input" accept="image/*" onchange="previewImage(event)" style="display: none;">
                        <!-- Custom button to trigger file input -->
                        <button type="button" class="btn-upload" onclick="document.getElementById('uploadImage').click();">Upload Image</button>
                        <!-- Validation message -->
                        <span asp-validation-for="ImgUrl" class="text-danger"></span>
                    </div>

                    <!-- Button aligned to the bottom right of text area -->
                    <div class="button-container">
                        <button type="submit" class="btn btn-primary btn-lg btn-post">Post</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/js/createPost.js"></script>
