@model NissGram.Models.Post

<head>
    <link rel="stylesheet" href="~/css/createPost.css" />
</head>

<div class="container mt-3">
    <div class="text-center mb-4">
        <h2>Update your post!</h2>
    </div>

    <div class="row">
        <!-- Left Column: Image Preview -->
        <div class="col-md-6 d-flex justify-content-center">
            <div id="imagePreview" class="border">
                <!-- Display image or placeholder text if no image is available -->
                @if (!string.IsNullOrEmpty(Model.ImgUrl))
                {
                    <!-- Ensure path is correctly resolved -->
                    <img src="@Url.Content("~" + Model.ImgUrl.Replace("/wwwroot", ""))" alt="Image Preview" />
                }
                else
                {
                    <span class="text-muted">Image preview will appear here</span>
                }
            </div>
        </div>

        <!-- Right Column: Form Elements -->
        <div class="col-md-6">
            <form asp-action="Update" method="post" enctype="multipart/form-data">
                <!-- Hidden field for PostId -->
                <input type="hidden" asp-for="PostId" />

                <!-- Text Area for updating text -->
                <div class="form-group md-1">
                    <label for="textArea" class="font-weight-bold">Content</label>
                    <textarea class="form-control form-control-lg" id="textArea" rows="6" placeholder="Write something..." asp-for="Text">@Model.Text</textarea>
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>

                <!-- Image Upload Section -->
                <div class="form-group md-2">
                    <!-- Hidden file input -->
                    <input type="file" id="uploadImage" class="file-input" accept="image/*" onchange="previewImage(event)" style="display: none;">
                    <!-- Custom button to trigger file input -->
                    <button type="button" class="btn-upload" onclick="document.getElementById('uploadImage').click();">Upload Image</button>
                    <!-- Validation message -->
                    <span asp-validation-for="ImgUrl" class="text-danger"></span>
                </div>

                <!-- Update button aligned to the bottom right of text area -->
                <div class="button-container">
                    <button type="submit" class="btn btn-primary btn-lg btn-post">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/js/createPost.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Check if there's an existing image and initialize preview if available
        const existingImageUrl = "@Url.Content("~" + (Model.ImgUrl ?? "").Replace("/wwwroot", ""))";
        const imagePreview = document.getElementById('imagePreview');

        if (existingImageUrl) {
            // Set the image as the content and remove any placeholder text
            imagePreview.innerHTML = '<img src="' + existingImageUrl + '" alt="Image Preview" style="max-width: 100%; max-height: 100%; object-fit: contain;">';
            imagePreview.style.border = 'none';
            imagePreview.style.backgroundColor = 'transparent';
            imagePreview.classList.remove('border');
        }
    });
</script>