@using Microsoft.AspNetCore.Identity
@using NissGram.Models
@inject SignInManager<User> SignInManager

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NissGram</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NissGram.styles.css" asp-append-version="true" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.13/jquery.validate.unobtrusive.min.js"></script>

</head>

<body>
    <!-- Header and navigation -->
    <header class="fixed-header">
        <a asp-controller="Home" asp-action="Index" class="navbar-brand">
            <img src="~/images/NissGramLogo.png" alt="NissGram Logo" style="height: 35px; padding: 5px;">
        </a>
        
        @if (SignInManager.IsSignedIn(User))
        {
            <!-- Icon bar that only appears on small screens for authenticated users -->
            <nav class="icon-bar">
                <a asp-controller="User" asp-action="Profile">
                    <div class="circle bg-primary text-white">Profile</div>
                </a>
                <a asp-controller="Home" asp-action="Index">
                    <div class="circle bg-secondary text-white">🏠</div>
                </a>
                <a asp-controller="Post" asp-action="Create">
                    <div class="circle bg-success text-white">+</div>
                </a>
                <a asp-controller="User" asp-action="Search">
                    <div class="circle bg-danger text-white">🔍</div>
                </a>
                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="~/Identity/Account/Login" method="post" class="d-inline">
                    <button type="submit" class="nav-link text-white p-0 border-0 bg-transparent">
                        <div class="circle bg-dark text-white">Logout</div>
                    </button>
                </form>
            </nav>
        }
    </header>

    @if (SignInManager.IsSignedIn(User))
    {
        <!-- Sidebar navigation for signed-in users -->
        <div class="d-flex">
            <nav class="side-navbar">
                <ul class="nav flex-column text-center flex-grow-1">
                    <li class="nav-item mb-3">
                        <a asp-controller="User" asp-action="Profile" class="nav-link">
                            <div class="circle first bg-primary text-white">Profile</div>
                        </a>
                    </li>
                    <li class="nav-item mb-3">
                        <a asp-controller="Home" asp-action="Index" class="nav-link">
                            <div class="circle middle bg-secondary text-white">🏠</div>
                        </a>
                    </li>
                    <li class="nav-item mb-3">
                        <a asp-controller="Post" asp-action="Create" class="nav-link">
                            <div class="circle middle bg-success text-white">+</div>
                        </a>
                    </li>
                    <li class="nav-item mb-3">
                        <a asp-controller="User" asp-action="Search" class="nav-link">
                            <div class="circle middle bg-danger text-white">🔍</div>
                        </a>
                    </li>
                </ul>
                <div class="circle logout bg-dark text-white">
                    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="~/Identity/Account/Login" method="post" class="d-inline">
                        <button type="submit" class="nav-link text-white p-0 border-0 bg-transparent">
                            <div class="circle bg-dark text-white">Logout</div>
                        </button>
                    </form>
                </div>
            </nav>
        </div>
    }

    <!-- Main Content Area -->
    <div class="content-container">
        <div class="container">
            @RenderBody()
            @RenderSection("Scripts", required: false)
        </div>
    </div>

    <footer class="border-top footer text-muted @((ViewData["Title"]?.ToString() == "Log in" || ViewData["Title"]?.ToString() == "Register") ? "full-width-footer" : "")">
        <div class="container">
            &copy; 2024 - NissGram - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>