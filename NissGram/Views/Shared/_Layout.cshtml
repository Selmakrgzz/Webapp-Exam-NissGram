<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NissGram</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NissGram.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="fixed-header">
        <a class="navbar-brand text-white" href="#">NissGram</a>
    </header>
    
    <div class="d-flex">
        <!-- Side Navigation Bar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light flex-column align-items-center side-navbar">
            <ul class="nav flex-column text-center flex-grow-1">
                <!-- User Profile -->
                <li class="nav-item mb-3">
                    <a class="nav-link" href="/User/Profile"><div class="circle first bg-primary text-white">1</div></a>
                </li>
                <!-- Main Page (House Icon) -->
                <li class="nav-item mb-3">
                    <a class="nav-link" href="/Home/Index"><div class="circle middle bg-secondary text-white">🏠</div></a>
                </li>
                <!-- Add Post (Plus Icon) -->
                <li class="nav-item mb-3">
                    <a class="nav-link" href="/Post/Create"><div class="circle middle bg-success text-white">+</div></a>
                </li>
                <!-- Search User (Magnifying Glass Icon) -->
                <li class="nav-item mb-3">
                    <a class="nav-link" href="/User/Search"><div class="circle middle bg-danger text-white">🔍</div></a>
                </li>
            </ul>
            <!-- Logout Button -->
            <div class="circle logout bg-dark text-white">
                <a class="nav-link text-white" href="/Account/Logout">Logout</a>
            </div>
        </nav>

        <!-- Main Content Area -->
        <div class="content-container flex-grow-1">
            <div class="container">
                @RenderBody()
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - NissGram - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
