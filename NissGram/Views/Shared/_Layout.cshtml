@using Microsoft.AspNetCore.Identity
@using NissGram.Models
@inject UserManager<User> UserManager
@inject SignInManager<User> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NissGram</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NissGram.styles.css" asp-append-version="true" />
</head>
<body>

    <!-- Header and navigation -->
    @if (SignInManager.IsSignedIn(User))
    {
        // Hent den innloggede brukeren
        var currentUser = await UserManager.GetUserAsync(User);
        var profilePicture = currentUser?.ProfilePicture ?? "/images/profile_image_default.png";

        <header class="fixed-header">
            <a asp-controller="Home" asp-action="Index" class="navbar-brand">
                <img src="/images/Niss.png" style="height: 70px; padding: 5px;" alt="NissGram Logo">
            </a>
            <!-- Icon bar for smÃ¥ skjermer -->
            <nav class="icon-bar">
                <a asp-controller="User" asp-action="Profile">
                    <div class="profile-container">
                        <img src="@profilePicture" class="profile-picture" alt="Profile Picture">
                    </div>
                </a>
                <a asp-controller="Home" asp-action="Index">
                    <div class="bg-secondary text-white">
                        <img src="/images/homeIcon.png" style="height: 40px; padding: 5px;" alt="Home Icon">
                    </div>
                </a>
                <a asp-controller="Post" asp-action="Create">
                    <div class="bg-success text-white">
                        <img src="/images/addIcon.png" style="height: 40px; padding: 5px;" alt="Add Post Icon">
                    </div>
                </a>
                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="~/Identity/Account/Login" method="post" class="d-inline">
                    <button type="submit" class="nav-link text-white p-0 border-0 bg-transparent">
                        <img src="/images/logoutIcon.png" style="height: 40px; padding: 5px;" alt="Logout Icon">
                    </button>
                </form>
            </nav>
        </header>

        <div class="d-flex">
            <!-- Side navbar -->
            <nav class="side-navbar">
                <ul class="nav flex-column text-center flex-grow-1">
                    <li class="nav-item mb-3">
                        <a asp-controller="User" asp-action="Profile" class="nav-link">
                            <img src="@profilePicture" alt="Profile Picture" class="rounded-circle" style="width: 50px; height: 50px;">
                        </a>
                    </li>
                    <li class="nav-item mb-3">
                        <a asp-controller="Home" asp-action="Index" class="nav-link">
                            <img src="/images/homeIcon.png" alt="Home Icon" class="rounded-circle bg-secondary p-2" style="width: 50px; height: 50px;">
                        </a>
                    </li>
                    <li class="nav-item mb-3">
                        <a asp-controller="Post" asp-action="Create" class="nav-link">
                            <img src="/images/addIcon.png" alt="Add Post Icon" class="rounded-circle bg-success p-2" style="width: 50px; height: 50px;">
                        </a>
                    </li>
                </ul>
                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="~/Identity/Account/Login" method="post" class="d-flex align-items-center justify-content-center" style="height: 100%;">
                    <button type="submit" class="nav-link text-white p-0 border-0 bg-transparent">
                        <img src="/images/logoutIcon.png" alt="Logout Icon" class="rounded-circle" style="width: 50px; height: 50px;">
                    </button>
                </form>
            </nav>
        </div>
    }

    <!-- Main Content Area -->
    <div class="content-container">
        <div class="container">
            @RenderBody()
            @RenderSection("Scripts", required: false)
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - NissGram - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
