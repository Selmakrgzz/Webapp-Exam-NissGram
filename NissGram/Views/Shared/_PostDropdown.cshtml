@model NissGram.Models.Post

<!-- Dropdown for Post Actions -->
@if (Model.User.UserName == User.Identity.Name)
{
    <div class="dropdown" style="position: absolute; top: 10px; right: 10px;">
        <button class="btn btn-link p-0" type="button" id="dropdownMenuButton-@Model.PostId"
                data-bs-toggle="dropdown" aria-expanded="false" style="color: black;">
            <!-- Burger Icon -->
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                    class="bi bi-three-dots" viewBox="0 0 16 16">
                <path d="M3 9a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm5 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm5 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2z" />
            </svg>
        </button>
        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton-@Model.PostId">
            <li>
                <a class="dropdown-item" asp-controller="Post" asp-action="update" asp-route-id="@Model.PostId">
                    Update
                </a>
            </li>
            <li>
                <form asp-controller="Post" asp-action="Delete" method="post" class="m-0">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.PostId" />
                    <button type="submit" class="dropdown-item text-danger">Delete</button>
                </form>
            </li>
        </ul>
    </div>
}