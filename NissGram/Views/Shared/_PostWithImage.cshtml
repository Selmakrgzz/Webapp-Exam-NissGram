@model NissGram.Models.Post

<div class="card mb-4 mx-auto" style="max-width: 600px;">
    <div class="card-body">
        <!-- User Profile Header -->
        <partial name="_PostProfileHeader" model="Model" />

        <!-- Image and Text Content -->
        @if (!string.IsNullOrEmpty(Model.ImgUrl))
        {
            <img src="@Url.Content(Model.ImgUrl)" alt="Post Image" class="img-fluid rounded mb-3">
        }
        <p class="card-text">@Model.Text</p>

        <!-- Post Dates -->
        <hr>
        <partial name="_PostDates" model="Tuple.Create(Model.DateCreated, Model.DateUpdated)" />

        <!-- Post Actions -->
        <partial name="_PostActions" model="Model" />
    </div>
</div>
