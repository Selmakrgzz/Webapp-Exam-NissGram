@model NissGram.ViewModels.UserProfileViewModel

<div class="dynamic-content mt-4">
    @if (Context.Request.Query["section"].ToString() == "Pictures" || string.IsNullOrEmpty(Context.Request.Query["section"]))
    {
        @if (Model.Pictures != null && Model.Pictures.Any())
        {
            <h3>Pictures</h3>
            <partial name="_PicturesView" model="Model.Pictures" />
        }
        else
        {
            <h3>Pictures</h3>
            <p>No content available for the selected section.</p>
        }
    }
    else if (Context.Request.Query["section"].ToString() == "Notes")
    {
        @if (Model.Notes != null && Model.Notes.Any())
        {
            <h3>Notes</h3>
            <partial name="_NotesView" model="Model.Notes" />
        }
        else
        {
            <h3>Notes</h3>
            <p>No content available for the selected section.</p>
        }
    }
</div>
