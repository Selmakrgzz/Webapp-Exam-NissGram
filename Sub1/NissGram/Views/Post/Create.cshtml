@model NissGram.Models.Post

<div class="container mt-3">
    <div class="text-center mb-4">
        <h2>Share something!</h2>
    </div>

    <div class="row">
        <!-- Left Column: Image Preview -->
        <div class="col-md-6 d-flex justify-content-center">
            <div id="imagePreview" class="border">
                <span class="text-muted">Image preview will appear here</span>
            </div>
        </div>

        <!-- Right Column: Form Elements -->
        <div class="col-md-6">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <!-- Text Area -->
                <div class="form-group mb-3">
                    <textarea class="form-control form-control-lg" id="textArea" rows="6"
                        placeholder="Write something..." asp-for="Text"></textarea>
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>

                <!-- Buttons Section: Aligned in the Same Row -->
                <div class="form-group d-flex justify-content-between align-items-center">
                    <!-- Upload Image Button -->
                    <button type="button" class="btn btn-primary btn-lg btn-post"
                        onclick="document.getElementById('uploadImage').click();">Upload Image</button>
                    <!-- Hidden file input -->
                    <input type="file" id="uploadImage" name="uploadImage" class="file-input" accept="image/*"
                        onchange="previewImage(event)" style="display: none;">

                    <!-- Post Button -->
                    <button type="submit" class="btn btn-primary btn-lg btn-post">Post</button>
                </div>

                <!-- Validation for Image -->
                <span asp-validation-for="ImgUrl" class="text-danger"></span>

                <!-- Validation for combined Text and Image -->
                @* <div id="combinedValidation" class="text-danger mt-2" style="display: none;">
                    You must provide either text or an image.
                </div> *@
            </form>
        </div>
    </div>
</div>

<script src="~/js/createPost.js"></script>
